/* pages/tips/tips.wxss */

.choice {
  margin-top: 10%;
  width: 500rpx;
  height: 500rpx;
  justify-content: center;

  display: flex;
  text-align: center;
  flex-direction: column;
  background-color: gray;
  box-shadow: 0 0 20rpx 10rpx lightgray;
}

.choice text {
  color: white;
  font-size: 1.5rem;
}


.btn{
  margin-top: 25%;
  background-color: gray;
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-radius: 50% 50%;
}

.btn text{
  align-items: center;
  color: white;
  font-size: 2rem;
}