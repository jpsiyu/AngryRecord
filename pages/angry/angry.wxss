.container{
  box-sizing: border-box;
  height: 100vh;
}

.title-container{
  box-sizing: border-box;
  flex: 4;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.title-bg{
  background-color: gray;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 500rpx;
  height: 500rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.5);
}

.count{
  font-size: 8rem;
}

.progress-container{
  width: 500rpx;
  box-sizing: border-box;
  flex: 1;
}

.progress-list{
  width: 100%;
  display: flex;
  border: 2px gray solid;
  box-sizing: border-box;
  border-radius: 20rpx;
  overflow: hidden;
}

.progress-list progress{
  width: 25%;
}

.progress-desc{
  display: flex;
  justify-content: space-between;
  color: gray;
}

.btn-container{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  flex: 2;
}

.btn-container button{
  width: 200rpx;
  height: 200rpx;
  background-color: gray;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2.5rem;
}

.history{
  box-sizing: border-box;
  flex: 1;
  display: flex;
  color: gray;
  align-items: flex-start;
}

.history text{
  padding: 0 10rpx;
}

.fire-container{
  position: absolute;
  top: 62.5vh;
  display: flex;
  justify-content: space-between;
  width: 80%;
}

.fire-container image{
  width: 200rpx;
  height: 200rpx;
}

